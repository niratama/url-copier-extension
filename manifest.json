{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.0",
  "description": "__MSG_extDesc__",
  "default_locale": "ja",
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "offscreen",
    "clipboardWrite",
    "notifications",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Copy with last used template"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "commands": {
    "copy-last-used": {
      "suggested_key": {
        "default": "Alt+C",
        "mac": "Alt+C"
      },
      "description": "__MSG_cmdCopyLastUsed__"
    },
    "show-palette": {
      "suggested_key": {
        "default": "Alt+P",
        "mac": "Alt+P"
      },
      "description": "__MSG_cmdShowPalette__"
    },
    "copy-slot-1": {
      "suggested_key": {
        "default": "Alt+1",
        "mac": "Alt+1"
      },
      "description": "__MSG_cmdCopySlot1__"
    },
    "copy-slot-2": {
      "suggested_key": {
        "default": "Alt+2",
        "mac": "Alt+2"
      },
      "description": "__MSG_cmdCopySlot2__"
    }
  }
}